{
  "name": "inventory-backend",
  "version": "1.0.0",
  "description": "Inventory Management System - PERN Stack",
  "main": "src/server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate:make": "knex migrate:make --knexfile knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.js",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.js",
    "migrate:status": "knex migrate:status --knexfile knexfile.js",
    "seed:make": "knex seed:make --knexfile knexfile.js",
    "seed:run": "knex seed:run --knexfile knexfile.js",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "run_next_migration": "knex migrate:up --migrations-directory src/models/migrations",
    "undo_last_migration": "knex migrate:down--migrations-directory",
    "create_migration": "knex migrate:make"
  },
  "keywords": [
    "inventory",
    "pern",
    "express",
    "knex",
    "clerk"
  ],
  "author": "Aryan Madkar",
  "license": "MIT",
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "pnpm": "^10.27.0",
    "uuid": "^13.0.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
